%form{:action=>'/sites',:method=>'post'}
  %p
    URL:
    %input{:name=>'url',:value=>@site.url,:size=>65}
  %p
    Notify list:
    %br
    %textarea{:name=>'notify',:rows=>5,:cols=>70}
      =@site.notify
  %p
    %input{:type=>'submit'}
  - if @site.id
    %input{:type=>"hidden",:value=>@site.id,:name=>'id'}
    %input{:type=>"hidden",:value=>"PUT",:name=>"_method"}
