- @sites.each do |site|
  %p
    %a{:href=>"/sites/#{site.id}"}
      =site.url
    &nbsp;
    - if site.last_check
      %img{:src=>"/images/#{site.current_status}.png"}
      =site.current_status
      since 
      =standard_date_time(site.status_changed)
      (last check 
      =standard_date_time(site.last_check)
      )
    - else
      Not checked
    &nbsp;
    %a{:href=>"/sites/#{site.id}/check"} check
    &nbsp;
    = delete_link(site,'/sites','remove')
